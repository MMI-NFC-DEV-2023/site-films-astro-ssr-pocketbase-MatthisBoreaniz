---
import "../styles/global.css";
interface Props {
  pageTitle: string;
}
const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="en" x-data="{menuOpen: false}">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <header class="bg-white shadow-md">
      <div class="container mx-auto flex justify-between items-center p-4">
        <div class="text-xl font-bold">Site SSR</div>
        <button
          class="md:hidden"
          aria-controls="navigation"
          :aria-expanded="menuOpen"
          @click="menuOpen = !menuOpen">Open Menu</button
        >
        <nav class="hidden md:flex space-x-4">
          <a href="/" class="nav-link text-blue-500 hover:text-blue-700"
            >Accueil</a
          >
          <a
            href="/personnes"
            class="nav-link text-blue-500 hover:text-blue-700"
            >Liste des personnes</a
          >
          <a
            href="/authPassword"
            class="nav-link text-blue-500 hover:text-blue-700">Se connecter</a
          >
          <a
            href="/auth-github"
            class="nav-link text-blue-500 hover:text-blue-700"
            >Se connecter avec Github</a
          >
          <a href="/films" class="nav-link text-blue-500 hover:text-blue-700"
            >Liste des films</a
          >
        </nav>
      </div>
      <nav
        :aria-hidden="!menuOpen"
        class="md:hidden fixed inset-0 bg-white transform transition-transform duration-300"
        :class="{'translate-x-full' : !menuOpen, 'translate-x-0' : menuOpen}"
        id="navigation"
      >
        <button
          class="absolute top-4 right-4"
          aria-controls="navigation"
          :aria-expanded="menuOpen"
          @click="menuOpen = false">Close</button
        >
        <a href="/" class="block p-4 text-blue-500 hover:text-blue-700"
          >Accueil</a
        >
        <a href="/personnes" class="block p-4 text-blue-500 hover:text-blue-700"
          >Liste des personnes</a
        >
        <a
          href="/authPassword"
          class="block p-4 text-blue-500 hover:text-blue-700">Se connecter</a
        >
        <a
          href="/auth-github"
          class="block p-4 text-blue-500 hover:text-blue-700"
          >Se connecter avec Github</a
        >
        <a href="/films" class="block p-4 text-blue-500 hover:text-blue-700"
          >Liste des films</a
        >
      </nav>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>
